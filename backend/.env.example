# 环境配置
PORT=3000
NODE_ENV=development

# 数据库配置
DB_PATH=./data/hackernews.db

# LLM 配置
OPENAI_API_KEY=sk-your-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-3.5-turbo

# 任务队列配置
MAX_CONCURRENCY=3

# 文章翻译并发配置
ARTICLE_TRANSLATION_CONCURRENCY=5

# 管理员配置
ADMIN_TOKEN=your-admin-token-here

# 调度器配置（可通过管理面板动态修改）
SCHEDULER_INTERVAL=300000
SCHEDULER_STORY_LIMIT=30

# 评论翻译配置
MAX_COMMENT_TRANSLATIONS=50
